@model Application.ViewModels.CarViewModel;

@{
    if (Model == null)
    {
        ViewBag.Title = "Add Car";
    }
    else
    {
        ViewBag.Title = "Edit Car";
    }
}
<h2>@ViewBag.Title</h2>
<form asp-controller="Car" asp-action="AddOrEdit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Maker" class="col-form-label"></label>
            <input asp-for="Maker" class="form-control" placeholder="Maker">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Model" class="col-form-label"></label>
            <input asp-for="Model" class="form-control" placeholder="Model">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="YearProduced" class="col-form-label"></label>
            <input asp-for="YearProduced" class="form-control" placeholder="Year Produced">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Color" class="col-form-label"></label>
            <input asp-for="Color" class="form-control" placeholder="Color">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="PricePerDay" class="col-form-label"></label>
            <input asp-for="PricePerDay" class="form-control" placeholder="Price Per Day in $">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Photos" class="col-form-label"></label>
            <input asp-for="Photos" class="form-control" placeholder="Photo">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>