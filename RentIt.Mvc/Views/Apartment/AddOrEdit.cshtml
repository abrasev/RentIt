@model Application.ViewModels.ApartmentViewModel;
@{ 
    if (Model == null)
    {
        ViewBag.Title = "Add Apartment";
    }
    else
    {
        ViewBag.Title = "Edit Apartment";
    }
}
<h1>@ViewBag.Title</h1>
<hr />
<form asp-controller="Apartment" asp-action="AddOrEdit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Address" class="col-form-label"></label>
            <input asp-for="Address" class="form-control" placeholder="Address">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Bads" class="col-form-label"></label>
            <input asp-for="Bads" class="form-control" placeholder="Beds">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="City" class="col-form-label"></label>
            <input asp-for="City" class="form-control" placeholder="City">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="PricePerNight" class="col-form-label"></label>
            <input asp-for="PricePerNight" class="form-control" placeholder="Price Per Night in $">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Photos" class="col-form-label"></label>
            <input asp-for="Photos" class="form-control" placeholder="Photo">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>