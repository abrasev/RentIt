@model Application.ViewModels.RenteeViewModel

@{
    if (Model == null)
    {
        ViewBag.Title = "Add Rentee";
    }
    else
    {
        ViewBag.Title = "Edit Rentee";
    }
}
<h2>@ViewBag.Title</h2>
<form asp-controller="Rentee" asp-action="AddOrEdit" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="FirstName" class="col-form-label"></label>
            <input asp-for="FirstName" class="form-control" placeholder="First Name">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="LastName" class="col-form-label"></label>
            <input asp-for="LastName" class="form-control" placeholder="Last Name">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="Email" class="col-form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Email">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="PhoneNumber" class="col-form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>